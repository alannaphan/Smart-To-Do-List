<body>
  <header class="top-banner">
    <%- include('partials/_header')%>
  </header>

  <main>
    <% if (!userID) { %>
    <h2>Please login to enjoy your Smart TODOs</h2>
    <% } else {%>
    <form class="new-item" action="/items" method="POST">
      <div class="user-input">
        <div class="user-input-right">
          <div>NEW ITEM:</div>
          <div>DEADLINE:</div>
          <!-- <div>LIST:</div> -->
        </div>

        <div class="user-input-left">
          <input type="text" placeholder="Add a task!" />
          <input type="date" />
          <!-- <select name="list-category" id="list-category">
            <option value="default" selected>Your recommended list wil be:</option>
            <option value="watch">👀 to watch</option>
            <option value="eat">😋 to eat</option>
            <option value="read" >📖 to read</option>
            <option value="buy" >🛍 to buy</option>
            <option value="other">❓ Other</option>
          </select> -->
        </div>
      </div>
      <button type="submit" class="button-56">Submit</button>
    </form>


    <section class="all-lists">
      <div class="each-row">
        <div class="per-list">
          <header>
            <h3>👀 to watch:</h3>
          </header>
          <article>
            <div class="check-item">
              <input type="checkbox" name="checkbox" id="checkbox">
              <p>Watch FA ep9!</p>
            </div>
            <footer>
              <i class="fa-regular fa-clock" style="color: #a52a2a;"></i>
              deadline: new Wed
            </footer>

            <div class="modify-buttons">
              <a href="/items">
                <button class="button-4" role="button">edit</button>
              </a>
              <form method="POST" action="/items/delete">
                <button class="button-4" role="button">delete</button>
              </form>
            </div>
          </article>
        </div>

        <div class="per-list">
          <header>
            <h3>😋 to eat:</h3>
          </header>
          <article>
            <div class="check-item">
              <input type="checkbox" name="checkbox" id="checkbox">
              <p>Watch FA ep9!</p>
            </div>
            <footer>
              <i class="fa-regular fa-clock" style="color: #a52a2a;"></i>
              deadline: new Wed
            </footer>
          </article>
        </div>

      </div>

      <div class="each-row">
        <div class="per-list">
          <header>
            <h3>📖 to read:</h3>
          </header>
          <article>
            <div class="check-item">
              <input type="checkbox" name="checkbox" id="checkbox">
